@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "Add Category";
    ViewBag.ControllerName = "Category";
    ViewBag.MethodName = "Add Category";
    ViewBag.ActionButtonTitle = "GO BACK";
    ViewBag.ActionUrl = "#";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Add Category</h3>
            </div>
            <div class="card-body">
                
                <div class="form-group">
                    <label class="form-label">Category Title</label>
                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", @type = "text", @placeholder = "Title.." })
                    @Html.ValidationMessageFor(x => x.CategoryName)

                </div>

                <div class="form-group">
                    <label class="form-label">Category Description</label>
                    @Html.TextAreaFor(x => x.CategoryDescription, 15,3, new { @class = "form-control", @type = "text", @placeholder = "Category Description" })
                    @Html.ValidationMessageFor(x => x.CategoryDescription)
                </div>



            </div>
            <div class="card-footer">
                <div class="form-group">
                    <button class="btn text-white bg-green">Create</button>
                </div>
                <div class="form-group">
                    <button class="btn text-white bg-red">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

