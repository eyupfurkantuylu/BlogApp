@using EntityLayer.Concrete
@model System.Collections.Generic.List<Blog>

@{
    ViewBag.Title = "Blog List By Author";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
    bool isOdd = true;
}

<h2>Author's Blogs</h2>

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Blog List By Author</h3>
        </div>
        <div class="card-body">
            <a id="addToTable" class="btn btn-primary mb-15" type="button" href="#">
                <i class="icon wb-plus" aria-hidden="true"></i> Yeni Ekle
            </a>
            <div class="table-responsive">
                <div id="addrowExample_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="dataTables_length" id="addrowExample_length">
                                <label>
                                    Tabloda
                                    <select name="addrowExample_length" aria-controls="addrowExample" class="form-control">
                                        <option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option>
                                    </select> veri göster
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div id="addrowExample_filter" class="dataTables_filter">
                                <label>Ara:<input type="search" class="form-control" placeholder="" aria-controls="addrowExample"></label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-hover table-vcenter table-striped dataTable" cellspacing="0" id="addrowExample" role="grid" aria-describedby="addrowExample_info">
                                <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="addrowExample" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending">ID</th>
                                    <th class="sorting" tabindex="0" aria-controls="addrowExample" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 493.90625px;">Blog Title</th>
                                    <th class="sorting" tabindex="0" aria-controls="addrowExample" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 232.125px;">Blog Create Date</th>
                                    <th class="sorting" tabindex="0" aria-controls="addrowExample" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 232.125px;">Blog Category</th>
                                    <th class="sorting" tabindex="0" aria-controls="addrowExample" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 232.125px;">Blog Status</th>
                                    <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="Actions" style="width: 184.875px;">Actions</th>
                                </tr>
                                </thead>
           
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeA @(isOdd ? "odd" : "even")" role="row">
                                        <td>@item.BlogID</td>
                                        <td>@item.BlogTitle</td>
                                        <td class="sorting_1">@item.BlogCreateDate</td>
                                        <td>@item.CategoryID</td>
                                        <td>@item.BlogStatus</td>
                                        <td class="actions">
                                            <button class="btn btn-sm btn-icon on-editing m-r-5 button-save" data-toggle="tooltip" data-original-title="Save" hidden="">
                                                <i class="icon-drawer" aria-hidden="true"></i>
                                            </button>
                                            <button class="btn btn-sm btn-icon on-editing button-discard" data-toggle="tooltip" data-original-title="Discard" hidden="">
                                                <i class="icon-close" aria-hidden="true"></i>
                                            </button>
                                            <a class="btn btn-sm btn-icon on-default m-r-5 button-edit" data-toggle="tooltip" data-original-title="Edit" href="#">
                                                <i class="icon-pencil" aria-hidden="true"></i>
                                            </a>
                                            <a class="btn btn-sm btn-icon on-default button-remove" data-toggle="tooltip" data-original-title="Remove" href="#">
                                                <i class="icon-trash" aria-hidden="true"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }



                                </tbody>
                            </table>
                        </div>
                    </div>
