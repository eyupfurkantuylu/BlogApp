@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";

}

<h2>Dashboard</h2>

<div class="container-fluid">

    <div class="row clearfix">
        <div class="col-lg-4 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div>Total Article</div>
                    <div class="py-4 m-0 text-center h1 text-success">@ViewBag.totalBlogCount</div>
                    <div class="d-flex">
                        <small class="text-muted">The number of articles added by all users.</small>
                        @* <div class="ml-auto"><i class="fa fa-caret-up text-success"></i>4%</div> *@
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div>Your Article</div>
                    <div class="py-4 m-0 text-center h1 text-info">@ViewBag.authorArticleCount</div>
                    <div class="d-flex">
                        <small class="text-muted">The number of articles you have added.</small>
                        @* <div class="ml-auto">0%</div> *@
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div>Your Blogs of Last 7 Day </div>
                    <div class="py-4 m-0 text-center h1 text-warning">@ViewBag.last7daysArticleCount</div>
                    <div class="d-flex">
                        <small class="text-muted">The number of articles added by all users in the last 7 days.</small>
                        @* <div class="ml-auto"><i class="fa fa-caret-up text-success"></i>3%</div> *@
                    </div>
                </div>
            </div>
