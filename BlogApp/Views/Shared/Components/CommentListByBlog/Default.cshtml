@model IEnumerable<EntityLayer.Concrete.Comment>


@if (Model.ToList().Count() > 0)
{
    <h2 class="mt-4 mb-4 ">Tüm Yorumlar</h2>
    @foreach (var item in Model)
    {

        <div class="container card col-sm-12 col-md-12 mt-2 mb-4 p-3">
    <div class="author-info">
        <h5>@item.CommentUserName</h5>
        <p>@item.CommentContent</p>
    </div>
</div>

    }
}
else
{
    <h2 class="mt-4 mb-4">İlk yorum yapan siz olun</h2>
}




